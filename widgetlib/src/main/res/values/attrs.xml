        <attr name="barChartValueTxtColor" format="color"/>
        <attr name="barChartValueTxtMaskSize" format="dimension"/>
        <attr name="barChartValueTxtMaskColor" format="color"/>
        <attr name="barChartValuePaddingBottom" format="dimension"/>
        <attr name="barChartValuePaddingLeft" format="dimension"/>

        <attr name="barBorderWidth" format="dimension" />
        <attr name="contentPaddingBottom" format="dimension" />
        <attr name="maxYAxisPaddingTop" format="dimension" />
        <attr name="recyclerPaddingLeft" format="dimension" />
        <attr name="recyclerPaddingRight" format="dimension" />

