    <declare-styleable name="NCalendar">
        <attr name="solarTextColor" format="color" />
        <attr name="lunarTextColor" format="color" />
        <attr name="solarHolidayTextColor" format="color" />
        <attr name="lunarHolidayTextColor" format="color" />
        <attr name="solarTermTextColor" format="color" />
        <attr name="selectCircleColor" format="color" />
        <attr name="todaySolarTextColor" format="color" />
        <attr name="todaySolarSelectTextColor" format="color" />
        <attr name="solarTextSize" format="dimension" />
        <attr name="lunarTextSize" format="dimension" />
        <attr name="lunarDistance" format="dimension" />
        <attr name="holidayTextSize" format="dimension" />
        <attr name="holidayDistance" format="dimension" />
        <attr name="selectCircleRadius" format="dimension" />
        <attr name="isShowLunar" format="boolean" />

        <attr name="pointSize" format="dimension" />
