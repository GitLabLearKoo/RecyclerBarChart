<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <include layout="@layout/layout_step_date_title" />

    <com.yxc.barchartlib.view.BarChartRecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingLeft="3dp"
        app:displayNumbers="7"
        app:enableCharValueDisplay="true"
        app:enableLeftYAxisLabel="false"
        app:enableRightYAxisLabel="true" />

    <TextView
        android:id="@+id/txt_count_Step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:textColor="@color/red"
        android:textSize="14sp" />

    <include layout="@layout/layout_step_bottom_desc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/test_width"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/shape_data_item_bg_white"
            android:gravity="center_vertical"
            android:text="移动对象" />

        <TextView
            android:id="@+id/test_width_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_scrollBy"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_data_item_bg_white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/test_scrollBy_viewGroup"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:background="@drawable/shape_data_item_bg_white"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:text="移动对象group" />

    </LinearLayout>

    <TextView
        android:id="@+id/test_scrollBy"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/shape_data_item_bg_white"
        android:gravity="center_vertical"
        android:text="移动对象" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp">

    <Button
        android:id="@+id/btn_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/shape_data_item_bg_white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="ScrollBy右移" />

    <Button
        android:id="@+id/btn_test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/shape_data_item_bg_white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="ScrollBy左移" />
    </RelativeLayout>

</LinearLayout>
